{
  "apps": [{
    "name": "tms-api-jenkins",
    "script": "dist/main.js",
    "instances": "max",
    "exec_mode": "cluster",
    "watch": true,
    "watch_delay": 1000,
    "ignore_watch": ["node_modules"],
    "instance_var": "INSTANCE_ID",
    "env": {
      "NODE_ENV": "production",
      "TZ": "Asia/Jakarta"
    }
  }]
}
