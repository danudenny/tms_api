    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.18",
    "@types/redis": "^2.8.12",
    "@types/sprintf-js": "^1.1.2",
    "@types/supertest": "^2.0.7",
    "axiosist": "^0.3.1",
    "cross-env": "^5.2.0",
    "jest": "^24.7.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
